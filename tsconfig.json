{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "src/**/*",
    "frontend/js/**/*.js",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules/*"
  ]
}